.footer 
	box-width()
	
	display flex 
	justify-content space-between
	
	@media screen and (max-width: 768px)
		flex-wrap wrap
		
	&-wrapper
		padding-top 40px
		padding-bottom 40px
		box-sizing border-box
		
		box-shadow 0 -4px 10px rgba(0,0,0,0.1)
		
		background-color #fff

	&-column 
		width calc(100% / 4 - 20px)
		max-width 240px
		


		& + &
			margin-left 15px
			
		&-title 
			font()
			font-weight 400
			font-size 16px
			margin-bottom 20px
			@media screen and (max-width: 768px)
				font-size 14px
			
		&-text 
			font()
			font-weight 300
			transition 0.2s
			margin-bottom 10px
			display block
			
			@media screen and (max-width: 768px)
				font-size 13px
			
		&-link 
			font()
			color primary
			font-weight 300
			transition 0.2s
			@media screen and (max-width: 768px)
				font-size 13px
			

		&-logo 
			width 70px
			height 49px
	

			margin-bottom 20px
			& img 
				width 70px
				height 49px
				

		@media screen and (max-width: 768px)
			width calc(100% / 2 - 5px)
			margin-bottom 30px
			& + &
				margin-left 0
				

		&-social-link

			&-wrapper
				margin-top 15px
				display inline-flex
				justify-content space-between

			border-radius 50%
			padding 7px
			border 2px solid primary
			
			margin-right 7px
			background-color #fff
			transition 0.2s
			&-image 
				width 18px
				height 18px
				display block
				fill primary
				transition 0.2s
			&:last-child
				margin-right 0
				



